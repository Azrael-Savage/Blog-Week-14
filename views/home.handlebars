{{#extend "layouts/main"}}
  {{#content "head"}}
    <meta name="description" content="{{description}}">
  {{/content}}
  {{#content "body"}}
    <h1>Welcome to My Blog!</h1>
    <p>This is a blog about all sorts of things.</p>
    {{#if user}}
      <p>You are logged in as {{user.username}}.</p>
    {{else}}
      <p><a href="/signup">Sign up</a> or <a href="/login">log in</a> to create posts and leave comments.</p>
    {{/if}}
    {{#each posts}}
      <div class="post-preview">
        <a href="/posts/{{id}}">
          <h2>{{title}}</h2>
          <p>{{body}}</p>
        </a>
      </div>
    {{/each}}
  {{/content}}
{{/extend}}
